# RIME Environment Configuration

# Server
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Gemini AI (Get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=
GEMINI_MODEL_VISION=gemini-2.0-flash
GEMINI_MODEL_TEXT=gemini-2.0-flash

# Database
DATABASE_URL=postgresql://rime:rime_dev_password@localhost:5432/rime
REDIS_URL=redis://localhost:6379

# Vector DB (Optional - works without)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=rime-memory

# Integrations (Optional)
GITHUB_TOKEN=
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Screen Service
SCREEN_SERVICE_URL=http://localhost:8000
CAPTURE_INTERVAL=3000

# Security
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# IMPORTANT: Enable mock mode for demo without API keys
ENABLE_MOCK=true
MOCK_SCENARIO=coding

# Voice
ENABLE_VOICE=true
